<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/receta">

        <ImageButton
            android:id="@+id/imageButton"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/btncitas"
            android:layout_alignEnd="@+id/btnanalisis"
            android:layout_alignRight="@+id/btnanalisis"
            android:background="@android:color/transparent"
            android:elevation="15dp"
            android:onClick="Expediente"
            app:srcCompat="@drawable/expediente" />


        <ImageButton
            android:id="@+id/btnreceta"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_marginTop="47dp"
            android:background="@android:color/transparent"
            android:elevation="15dp"
            android:onClick="Onclick"
            app:srcCompat="@drawable/pastillas"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/btnanalisis"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_above="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:typeface="sans"
            android:elevation="20dp"
            android:onClick="Analisis"
            app:srcCompat="@drawable/analisis" />

        <ImageButton
            android:id="@+id/btncitas"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnreceta"
            android:background="@android:color/transparent"
            android:elevation="15dp"
            android:onClick="Citas"
            app:srcCompat="@drawable/citas" />

        <TextView
            android:text="Receta"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnreceta"
            android:layout_marginBottom="32dp"
            android:id="@+id/txtreceta"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="32sp"
            android:layout_alignRight="@+id/btnreceta"
            android:layout_alignEnd="@+id/btnreceta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="AnÃ¡lisis"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtreceta"
            android:id="@+id/txtanalisis"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="32sp"
            android:layout_alignLeft="@+id/btnanalisis"
            android:layout_alignStart="@+id/btnanalisis"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Expediente"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtexpediente"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="32sp"
            android:layout_alignBaseline="@+id/txtcitas"
            android:layout_alignBottom="@+id/txtcitas"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton" />

        <TextView
            android:text="Citas"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:id="@+id/txtcitas"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="32sp"
            android:layout_alignBottom="@+id/btncitas"
            android:layout_alignRight="@+id/txtreceta"
            android:layout_alignEnd="@+id/txtreceta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>